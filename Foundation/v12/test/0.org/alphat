{
    "(farfield|inlet.*|outlet.*)"
    {
        type            calculated;
        value           uniform 0;
    }
    "symmetry.*"
    {
        type            symmetry;
    }

    sphere
    {
        type            compressible::alphatWallFunction;
        value           uniform 0;
    }

    #includeEtc "caseDicts/setConstraintTypes"
